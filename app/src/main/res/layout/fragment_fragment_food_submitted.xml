<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.source.code.fragments.fragment_food_submitted">
    <ListView
        android:id="@+id/submitted_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ProgressBar
            android:id="@+id/prgBar_frag_submitted_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-7dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/submitted_total_tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="总计"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/tv_price_frag_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/submitted_total_tvLabel"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="0.00元"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/btn_frag_submitted_check"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_order"
            android:text="结账"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


</LinearLayout>
