<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.source.code.fragments.Food_Detail_Model">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/elecrank_empty"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="20dp">
            <TextView
                android:id="@+id/tv_food_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试菜品"
                android:textColor="#000"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="28dp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/tv_food_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16.66 元"
                    android:textSize="25sp"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="菜品介绍："/>
            <TextView
                android:id="@+id/tv_food_detail_descrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="在这时，人类回想起了两百年前，没有肉吃的屈辱"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_food_detail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="点单"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/btn_order"/>
</RelativeLayout>
